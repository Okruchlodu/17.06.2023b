static void Main(string[] args)
    {
        // Pobranie od użytkownika wysokości trójkąta
        Console.Write("Podaj wysokość trójkąta: ");
        int height = int.Parse(Console.ReadLine());

        // Rysowanie trójkąta
        DrawTriangle(height);

        Console.ReadLine();
    }

    static void DrawTriangle(int height)
    {
        int width = 2 * height - 1;  // szerokość najdłuższego wiersza

        for (int i = 0; i < height; i++)
        {
            string row = new string('+', 2 * i + 1);  // znaki "+" w bieżącym wierszu
            row = row.PadLeft(width - i);  // wyrównanie wiersza
            Console.WriteLine(row);
        }
    }
}
